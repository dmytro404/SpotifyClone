@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body { display: flex; flex-direction: column; min-height: 100vh; }
        main { flex: 1; }
        footer { background-color: #f8f9fa; padding: 1rem 0; }
    </style>
</head>
<body>
    @*==================== NAVIGATION ====================*@
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MusicStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        @if (Context.User.Identity?.IsAuthenticated ?? false)
                        {
                            var name = Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Name)?.Value ?? "Unknown";
                            var isAdmin = Context.User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value == "Admin";

                            @if (isAdmin)
                            {
                                <a asp-controller="Home" asp-action="Admin" class="btn btn-outline-primary me-2">Admin</a>
                            }
                            <span class="me-2">Hello, @name</span>
                            <a href="?logout" class="btn btn-outline-secondary">Logout</a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#authModal">
                                Login
                            </button>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @*==================== MAIN BODY ====================*@
    <main role="main" class="container pb-3">
        @RenderBody()
    </main>

    @*==================== FOOTER ====================*@
    <footer class="border-top text-muted mt-auto">
        <div class="container text-center">
            &copy; 2025 - MusicStore - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @*==================== MODALS ====================*@
    <div class="modal fade" id="authModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="auth-form">
                    <div class="modal-header">
                        <h5 class="modal-title">Login</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <input type="text" id="login" class="form-control mb-2" placeholder="Login" />
                        <input type="password" id="password" class="form-control" placeholder="Password" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#auth-form").on("submit", function(e) {
            e.preventDefault();
            var login = $("#login").val();
            var password = $("#password").val();
            $.ajax({
                url: "/api/user/login",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({ login: login, password: password }),
                success: function() { location.reload(); },
                error: function() { alert("Login failed"); }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>